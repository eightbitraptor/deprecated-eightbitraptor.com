.post
  %h2
    %a{:href => "/posts/#{locals[:post].printable_pathname}"}= locals[:post].title
  .tags
    %p 
      posted on
      = pretty_date(locals[:post].published)
      and tagged with
      - locals[:post].tags.each do |tag|
        %a{ :href => "/categories/#{tag}" }= tag
  .post-body= to_html(locals[:post].body)
